while True:
    principal_amount = float(input("Enter Your Amount :"))
    how_many_years = float(input("Enter How Many Years You Take :"))
    yearly_intrest = float(input("Enter Intrest without Percentage :"))

    if (how_many_years == 0):
        print("Years can't be Zero")
    else:
        intrest = (principal_amount*(yearly_intrest/100))*how_many_years
        print("Total Intrest :",intrest,"%")